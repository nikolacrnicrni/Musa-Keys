<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="By clicking on the button below the Musa Keys app will stop listening to your phone rotations."
        android:textColor="@color/titleColor"
        android:textSize="22sp" />

    <Button
        android:id="@+id/unregister_broadcast_listener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Close clipboard mode"
        android:textColor="@color/keyContent"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>
